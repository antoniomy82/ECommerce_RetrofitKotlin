<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="antoniomy82.ecommerce.ui.fragments.MainFragment"
        android:label="activity_main"
        tools:layout="@layout/activity_main">
        <action
            android:id="@+id/action_mainFragment_to_listActivity"
            app:destination="@id/listActivity"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_detailActivity32"
            app:destination="@id/detailActivity3"
            app:popUpToInclusive="true" />  <!-- borra la pila de direcciones de NavController para que no se queden abiertos fragments -->
    </fragment>

    <activity
        android:id="@+id/listActivity"
        android:name="antoniomy82.ecommerce.ui.ListActivity"
        android:label="fragment_ecommerces_list"
        tools:layout="@layout/fragment_ecommerces_list" /> <!-- app:popUpTo (hay que poner su padre) borra  pila de direcciones de NavController -->

    <activity
        android:id="@+id/detailActivity3"
        android:name="antoniomy82.ecommerce.ui.DetailActivity"
        android:label="DetailActivity"
        app:popUpToInclusive="true" />

</navigation>